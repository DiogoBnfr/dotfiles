set selection-clipboard clipboard

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

set incremental-search true

set statusbar-h-padding 0
set statusbar-v-padding 0

set index-bg                    "#002b36" # base02
set index-fg                    "#93a1a1" # base1
set index-active-bg             "#93a1a1" # base01
set index-active-fg             "#002b36" # base2

set inputbar-bg                 "#002b36" # base01
set inputbar-fg                 "#93a1a1" # base2

set statusbar-bg                "#002b36" # base02
set statusbar-fg                "#93a1a1" # base1

set recolor                     true
set recolor-lightcolor          "#002b36" # base02
set recolor-darkcolor           "#93a1a1" # base1
