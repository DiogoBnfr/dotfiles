set selection-clipboard clipboard

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

set incremental-search true

set statusbar-h-padding 0
set statusbar-v-padding 0

set index-bg                    "#000000" # base02
set index-fg                    "#ffffff" # base1
set index-active-bg             "#c27127" # base01
set index-active-fg             "#000000" # base2

set inputbar-bg                 "#000000" # base01
set inputbar-fg                 "#ffffff" # base2

set statusbar-bg                "#000000" # base02
set statusbar-fg                "#ffffff" # base1

set recolor                     true
set recolor-lightcolor          "#000000" # base02
set recolor-darkcolor           "#ffffff" # base1
