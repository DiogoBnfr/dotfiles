# Zathura configuration file
# See man `man zathurarc'
map r reload
map p print
map i recolor
map J zoom out
map K zoom in
map [fullscreen] J zoom out
map [fullscreen] K zoom in
map R rotate
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

#search settings
set incremental-search true

#padding
set statusbar-h-padding 0
set statusbar-v-padding 0

set font "monospace"

# zathurarc-dark
set notification-error-bg       "#222222" # base01  # seem not work
set notification-error-fg       "#C88B8E" # red
set notification-warning-bg     "#222222" # base01
set notification-warning-fg     "#C88B8E" # red
set notification-bg             "#222222" # base01
set notification-fg             "#BDAB9B" # yellow

set completion-group-bg         "#3B465F" # base03
set completion-group-fg         "#839496" # base0
set completion-bg               "#0A0A0A" # base02
set completion-fg               "#BDAB9B" # base1
set completion-highlight-bg     "#2B2723" # base01
set completion-highlight-fg     "#BDAB9B" # base2

# Define the color in index mode
set index-bg                    "#0A0A0A" # base02
set index-fg                    "#837B70" # base1
set index-active-bg             "#2B2723" # base01
set index-active-fg             "#D8D8D8" # base2

set inputbar-bg                 "#0A0A0A" # base01
set inputbar-fg                 "#eee8d5" # base2

set statusbar-bg                "#8E8E65" # base02
set statusbar-fg                "#0A0A0A" # base1

set highlight-color             "#8E8E65" # base00  # hightlight match when search keyword(vim's /)
set highlight-active-color      "#3B465F" # blue

set default-bg                  "#050505" # base02
set default-fg                  "#C9C9C9" # base1
set render-loading              true
set render-loading-fg           "#93a1a1" # base02
set render-loading-bg           "#0A0A0A" # base02

# Recolor book content's color
set recolor                     true
set recolor-lightcolor          "#050505" # base02
set recolor-darkcolor           "#C9C9C9" # base1
set recolor-keephue             true      # keep original color
